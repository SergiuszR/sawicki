{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "off"
    },
    "globals": {
        "gsap": "readonly",
        "Swiper": "readonly",
        "SplitText": "readonly",
        "Config": "readonly"
    }
}